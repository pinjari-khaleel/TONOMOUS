

<section class="b-downloads{{#if theme}} t-{{theme}}{{/if}}{{#if direction}} -{{direction}}{{^}} -row{{/if}}"
         data-component="c30-downloads"
         {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
         style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
           {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
           {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
         data-lazy-component>
  <div class="b-downloads__container">
    <div class="b-downloads__listWrapper">
      {{#with downloads}}
        <h2 class="b-downloads__heading" data-downloads-heading>{{ title }}</h2>
        <ul class="b-downloads__list">
          {{#each items}}
            <li class="b-downloads__listItem">
              {{> molecule/m05-download-item variant=../../direction }}
            </li>
          {{/each}}
        </ul>
      {{/with}}
    </div>
  </div>
</section>
