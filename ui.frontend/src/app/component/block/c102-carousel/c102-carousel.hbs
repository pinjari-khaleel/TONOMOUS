

<section class="b-carousel"
  data-component="c102-carousel"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#with padding}}
    style="--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};"
  {{/with}}
  data-lazy-component
>
  <div>
    <div class="b-carousel__content" data-carousel-container>
      <div class="b-carousel__carousel" data-carousel>
          {{#each items}}
            <div class="b-carousel__carouselItem" data-carousel-item>
              {{!-- {{> molecule/m54-business-card }} --}}
              {{> block/c101-teaser-card }}
            </div>
          {{/each}}
      </div>
    </div>
    <div class="b-carousel__controls" data-controls>
        {{> organism/o42-slider-controls }}
      </div>
  </div>
</section>
