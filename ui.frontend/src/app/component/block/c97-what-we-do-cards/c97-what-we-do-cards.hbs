<link rel="stylesheet" href="./c97-what-we-do-cards.scss">


<section class="b-whatWeDoCards"
  data-component="c97-what-we-do-cards"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#if (condition backgroundColor '||' padding)}}
    style="{{#with padding}}--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};{{/with}}
    {{#with backgroundColor}}--component-background-color: {{#unless (condition this '===' transparent)}}var(--color-{{this}}){{^}}transparent{{/unless}};{{/with}}"
  {{/if}}
  data-lazy-component
>
   <div class="b-whatWeDoCards__container">
        <div class="b-whatWeDoCards__cardContainer" data-carousel-container>
          <div class="b-whatWeDoCards__cards" data-carousel>
              {{#each items}}
                <div class="b-whatWeDoCards__cardItem" data-carousel-item>
                  {{> molecule/m59-opportunity-card }}
                </div>
              {{/each}}
          </div>
      </div>
      <footer class="b-whatWeDoCards__footer">
        <div class="b-whatWeDoCards__controls" data-controls>
          {{> organism/o42-slider-controls }}
        </div>
      </footer>
  </div>
</section>
