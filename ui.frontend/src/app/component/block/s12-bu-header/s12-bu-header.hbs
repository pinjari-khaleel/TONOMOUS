<link rel="stylesheet" href="./s12-bu-header.scss">
<script src="./S12BuHeader.ts"></script>


<header class="b-tonomusBuNavigation{{#if secondaryNavigation}} -hasSecondaryNavigation{{/if}}"
        data-component="s12-bu-header"
        {{#if scrollComponent}}data-scroll-component{{/if}}
>
  <div class="b-tonomusBuNavigation__container" data-navigation-container>
    <div class="b-tonomusBuNavigation__logoWrapper">
      {{#with logo}}
        <a class="b-tonomusBuNavigation__logo">
          {{> atom/a01-image this disableTransition=true variant="block" }}
        </a>
      {{/with}}
      {{#if businessUnits}}
            {{> organism/o93-tonomus-bu-dropdown }}
      {{/if}}
    </div>


    <div class="b-tonomusBuNavigation__linkWrapper {{#if navigation.main.backItem}}-backLinkOnly{{/if}}">
      <input type="checkbox" id="tonomus_navigation_toggle" class="b-tonomusBuNavigation__dropdownToggle" data-toggle-checkbox />
      <label class="b-tonomusBuNavigation__toggleLabel" for="tonomus_navigation_toggle" data-dropdown-toggle>
        {{> atom/a02-icon name="hamburger" }}
        {{> atom/a02-icon name="cross" }}
      </label>
      <div class="b-tonomusBuNavigation__dropdownContent">
        {{#with navigation.main}}
          {{#with backItem}}
              <a class="b-tonomusBuNavigation__backLink"
                 data-link
                 href="{{href}}" {{#if (condition target '===' '_blank')}}target="_blank" rel="noopener"{{/if}}>
                {{> atom/a02-icon name="arrow-left-short" }}
                <span>{{label}}</span>
              </a>
          {{/with}}

          {{#if items}}
            <ul class="b-tonomusBuNavigation__linkList">
              {{#each items}}
                <li class="b-tonomusBuNavigation__listItem">
                  <a class="b-tonomusBuNavigation__link"
                     href="{{href}}" {{#if (condition target '===' '_blank')}}target="_blank" rel="noopener"{{/if}}>
                    <span>{{label}}</span>
                  </a>
                </li>
              {{/each}}
            </ul>
          {{/if}}
        {{/with}}
        {{!-- {{> molecule/m02-button navigation.highlightedLink theme="green" }} --}}

        {{#if languages}}
          {{> organism/o83-tonomus-language-selector }}
        {{/if}}
      </div>
    </div>

    {{> organism/o94-tonomus-sidebar }}
  </div>
</header>
