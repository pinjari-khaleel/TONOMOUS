

<section
  class="b-card-slider"
  data-component="c90-card-slider"
  {{#if scrollComponent}}data-scroll-component{{/if}}
  {{#if id}} id="{{id}}"{{/if}}
  {{#with padding}}
    style="--component-block-padding: var(--{{#with start}}block-padding-{{this}}{{else}}container-margin{{/with}})
    {{#unless (condition start '===' end)}}var(--{{#with end}}block-padding-{{this}}{{else}}container-margin{{/with}}){{/unless}};"
  {{/with}}
  data-lazy-component
>
  <div class="b-card-slider__container">
    <div class="b-card-slider__header">
      {{> molecule/m04-component-header header alignment="left" }}

      <div class="b-card-slider__controls" data-controls>
        {{> organism/o42-slider-controls }}
      </div>
    </div>

    <div class="b-card-slider__content" data-carousel-container>
      <div class="swiper__container" data-slider>
        <ul class="swiper-wrapper">
          {{#each items}}
            <li class="swiper-slide">
              {{#if (condition name '===' 'o84-event-card')}}
              {{> organism/o84-event-card data }}
              {{/if}}
              {{#if (condition name '===' 'o85-news-card')}}
              {{> organism/o85-news-card data}}
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>
