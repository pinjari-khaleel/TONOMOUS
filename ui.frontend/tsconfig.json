{
  "compilerOptions": {
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["DOM", "DOM.Iterable", "ES2017"],
    "baseUrl": "./src/",
    "paths": {
      "mediamonks-webgl/*": ["app/webgl/lib/*"]
    },
    "types": ["@types/handlebars", "@types/core-js", "@types/webpack-env"]
  },
  "exclude": ["./build-tools/plop-template/**/*", "./src/webgl/**/*.ts"],
  "include": ["./src/types.d.ts", "./src/**/*.ts", "node_modules/@types/grecaptcha/index.d.ts", "node_modules/@types/fontfaceobserver/index.d.ts"]
}
