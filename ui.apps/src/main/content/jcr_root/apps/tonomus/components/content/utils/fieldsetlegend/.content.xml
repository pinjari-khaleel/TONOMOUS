<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          sling:resourceType="cq/gui/components/authoring/dialog">
  <legend
      jcr:primaryType="nt:unstructured"
      jcr:title="Legend"
      sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
    <items jcr:primaryType="nt:unstructured">
      <legend-text
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
          fieldDescription="Please enter the legend text."
          fieldLabel="Text"
          name="./fieldsetLegend/text"/>
      <legend-required
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
          fieldDescription="Check to mark checkbox group as required."
          name="./fieldsetLegend/required"
          text="Required"
          value="-isRequired"
          uncheckedValue=""/>
      <legend-variant
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/form/select"
          fieldDescription="Please select legend variant."
          fieldLabel="Variant"
          emptyOption="{Boolean}true"
          name="./fieldsetLegend/variant">
        <items jcr:primaryType="nt:unstructured">
          <heading
              jcr:primaryType="nt:unstructured"
              text="Heading"
              value="-heading"/>
        </items>
      </legend-variant>
    </items>
  </legend>
</jcr:root>
