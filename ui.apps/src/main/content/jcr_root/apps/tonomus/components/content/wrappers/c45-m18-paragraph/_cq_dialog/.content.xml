<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="M18 Paragraph"
          sling:resourceType="cq/gui/components/authoring/dialog">
  <content
      jcr:primaryType="nt:unstructured"
      sling:resourceType="granite/ui/components/coral/foundation/tabs"
      maximized="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
      <general
          jcr:primaryType="nt:unstructured"
          jcr:title="General"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
              margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <headingText
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the component Heading Text."
                      fieldLabel="Heading Text"
                      name="./content/heading/text"/>
                  <headingWeight
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select the component Heading Size/Weight."
                      fieldLabel="Heading Size"
                      name="./content/heading/size">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="tonomus/generic/datasource"
                        path="tonomus/components/content/utils/headingweight"/>
                  </headingWeight>
                  <headingElement
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select the component Heading Element Size/Weight."
                      fieldLabel="Heading Element Size"
                      name="./content/heading/element">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="tonomus/generic/datasource"
                        path="tonomus/components/content/utils/headingweight"/>
                  </headingElement>
                  <eyebrowText
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the component Eyebrow Text."
                      fieldLabel="Eyebrow Text"
                      name="./content/eyebrow/text"/>
                  <eyebrowSize
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select the Eyebrow Size."
                      fieldLabel="Eyebrow Size"
                      name="./content/eyebrow/size">
                    <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="tonomus/generic/datasource"
                        path="tonomus/components/content/utils/eyebrowsize"/>
                  </eyebrowSize>
                  <alignment-horizontal
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select Horizontal alignment."
                      fieldLabel="Horizontal alignment"
                      name="./align/horizontal">
                    <items jcr:primaryType="nt:unstructured">
                      <start
                          jcr:primaryType="nt:unstructured"
                          text="Start"
                          value="start"/>
                      <center
                          jcr:primaryType="nt:unstructured"
                          text="Center"
                          value="center"/>
                      <end
                          jcr:primaryType="nt:unstructured"
                          text="End"
                          value="end"/>
                    </items>
                  </alignment-horizontal>
                  <alignment-vertical
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select Vertical alignment."
                      fieldLabel="Vertical alignment"
                      name="./align/vertical">
                    <items jcr:primaryType="nt:unstructured">
                      <top
                          jcr:primaryType="nt:unstructured"
                          text="Top"
                          value="top"/>
                      <middle
                          jcr:primaryType="nt:unstructured"
                          text="Middle"
                          value="middle"/>
                      <bottom
                          jcr:primaryType="nt:unstructured"
                          text="Bottom"
                          value="bottom"/>
                    </items>
                  </alignment-vertical>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </general>
      <details
          jcr:primaryType="nt:unstructured"
          jcr:title="Paragraph Details"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
              margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <icon
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select Icon."
                      fieldLabel="Icon"
                      name="./content/icon">
                    <items jcr:primaryType="nt:unstructured">
                      <none
                          jcr:primaryType="nt:unstructured"
                          text="None"
                          value=""/>
                      <health-wellbeing-biotech
                          jcr:primaryType="nt:unstructured"
                          text="Health wellbeing biotech"
                          value="health-wellbeing-biotech"/>
                    </items>
                  </icon>
                  <size
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/select"
                      fieldDescription="Please select Size."
                      fieldLabel="Size"
                      name="./content/size">
                    <items jcr:primaryType="nt:unstructured">
                      <small
                          jcr:primaryType="nt:unstructured"
                          text="Small"
                          value="small"/>
                      <medium
                          jcr:primaryType="nt:unstructured"
                          text="Medium"
                          value="medium"/>
                      <large
                          jcr:primaryType="nt:unstructured"
                          text="Large"
                          value="large"/>
                    </items>
                  </size>
                  <richtext
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                      sling:resourceSuperType="/apps/tonomus/components/content/utils/richtext"
                      fieldDescription="Please enter the Content."
                      fieldLabel="Content"
                      name="./content/copy"
                      useFixedInlineToolbar="{Boolean}true"/>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </details>
    </items>
  </content>
</jcr:root>
