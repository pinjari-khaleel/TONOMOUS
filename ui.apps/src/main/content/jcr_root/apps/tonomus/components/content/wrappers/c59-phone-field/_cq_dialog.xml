<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="C59 Phone Field"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[tonomus.author]">
  <content
      jcr:primaryType="nt:unstructured"
      sling:resourceType="granite/ui/components/coral/foundation/tabs"
      maximized="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
      <general
          jcr:primaryType="nt:unstructured"
          jcr:title="General"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
              margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <id
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the id."
                      fieldLabel="Id"
                      name="./id"/>
                  <name
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the name."
                      fieldLabel="Name"
                      required="{Boolean}true"
                      name="./name"/>
                  <label
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the label."
                      fieldLabel="Label"
                      required="{Boolean}true"
                      name="./label"/>
                  <title-in-english
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter a title in English for Analytics."
                      fieldLabel="Field title in English"
                      name="./titleInEnglish"
                      required="{Boolean}true"/>
                  <placeholder
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the placeholder."
                      fieldLabel="Placeholder"
                      name="./placeholder"/>
                  <flagsPath
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                      fieldDescription="Please enter the flags' path."
                      rootPath="/content/dam/neom"
                      fieldLabel="Flags' path"
                      name="./countrySelector/flagsPath"/>
                  <wide
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                      fieldDescription="Check to have wide field."
                      name="./wide"
                      text="Wide"
                      value="{Boolean}true"
                      uncheckedValue="{Boolean}false"/>
                  <required
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                      fieldDescription="Check to have required field."
                      name="./required"
                      text="Required"
                      value="{Boolean}true"
                      uncheckedValue="{Boolean}false"/>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </general>
      <countriesOptions
          jcr:primaryType="nt:unstructured"
          jcr:title="Countries"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
              margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <options-set
                      jcr:primaryType="nt:unstructured"
                      jcr:title="Options"
                      sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                    <items jcr:primaryType="nt:unstructured">
                      <id
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the id."
                          fieldLabel="Id"
                          name="./countrySelector/id"/>
                      <name
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the name."
                          fieldLabel="Name"
                          required="{Boolean}true"
                          name="./countrySelector/name"/>
                      <title-in-english
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter a title in English for Analytics."
                          fieldLabel="Field title in English"
                          name="./countrySelector/titleInEnglish"
                          required="{Boolean}true"/>
                      <placeholder
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the placeholder."
                          fieldLabel="Placeholder"
                          name="./countrySelector/placeholder"/>
                      <showRawValue
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check if it's show raw value."
                          name="./countrySelector/showRawValue"
                          text="Is show raw value?"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false"/>
                      <isWideDropdown
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check if it's wide dropdown."
                          name="./countrySelector/isWideDropdown"
                          text="Is wide dropdown?"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false"/>
                      <options
                          jcr:primaryType="nt:unstructured"
                          fieldLabel="Options"
                          fieldDescription="Click 'Add' to add a new option"
                          sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                          class="multifield-full-width"
                          composite="{Boolean}true">
                        <field
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Options"
                            name="./countrySelector/items"
                            granite:class="accordion-multifield-item"
                            sling:resourceType="granite/ui/components/coral/foundation/accordion">
                          <items
                              jcr:primaryType="nt:unstructured">
                            <tab
                                jcr:title="Option"
                                sling:resourceType="granite/ui/components/coral/foundation/container"
                                jcr:primaryType="nt:unstructured">
                              <items jcr:primaryType="nt:unstructured">
                                <label
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please enter the label."
                                    fieldLabel="Label"
                                    name="./label"/>
                                <value
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldDescription="Please enter the value."
                                    fieldLabel="Value"
                                    name="./value"/>
                                <selected
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                    fieldDescription="Check to have selected field."
                                    name="./selected"
                                    text="Selected"
                                    value="{Boolean}true"
                                    uncheckedValue="{Boolean}false"/>
                              </items>
                            </tab>
                          </items>
                        </field>
                      </options>
                    </items>
                  </options-set>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </countriesOptions>
      <validation
          jcr:primaryType="nt:unstructured"
          jcr:title="Validation"
          sling:resourceType="granite/ui/components/coral/foundation/container"
          margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
              jcr:primaryType="nt:unstructured"
              sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
              margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <numericality
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                      fieldDescription="Check to activate only number validation."
                      name="./validate/numericality/numericality"
                      text="Activate only number validation"
                      value="{Boolean}true"
                      uncheckedValue="{Boolean}false"/>
                  <numericality-message
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the only number error message."
                      fieldLabel="Only number error message"
                      name="./validate/numericality/message"/>
                  <presence-message-country
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the presence validation message for phone country."
                      fieldLabel="Presence validation message for phone country"
                      name="./countrySelector/validate/presence/message"/>
                  <presence-message
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the presence validation message for phone number."
                      fieldLabel="Presence validation message for phone number"
                      name="./validate/presence/message"/>
                  <format-pattern
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the format pattern for phone number field."
                      fieldLabel="Format regex pattern"
                      name="./validate/format/pattern"/>
                  <format-message
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                      fieldDescription="Please enter the format error message."
                      fieldLabel="Format error message"
                      name="./validate/format/message"/>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </validation>
    </items>
  </content>
</jcr:root>
