<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          xmlns:granite="http://www.adobe.com/jcr/granite/1.0"
          xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="M30 Text Field Wrapper Component"
          sling:resourceType="cq/gui/components/authoring/dialog"
          extraClientlibs="[tonomus.author]">
  <content
          jcr:primaryType="nt:unstructured"
          sling:resourceType="granite/ui/components/coral/foundation/tabs"
          maximized="{Boolean}true">
    <items jcr:primaryType="nt:unstructured">
      <general
              jcr:primaryType="nt:unstructured"
              jcr:title="General"
              sling:resourceType="granite/ui/components/coral/foundation/container"
              margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                  margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <type
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/select"
                          fieldDescription="Please select button type."
                          fieldLabel="Type"
                          name="./type">
                    <items jcr:primaryType="nt:unstructured">
                      <email
                              jcr:primaryType="nt:unstructured"
                              text="Email"
                              value="email"/>
                      <phone
                              jcr:primaryType="nt:unstructured"
                              text="Phone"
                              value="phone"/>
                      <password
                              jcr:primaryType="nt:unstructured"
                              text="Password"
                              value="password"/>
                      <text
                              jcr:primaryType="nt:unstructured"
                              text="Text"
                              value="text"/>
                      <textarea
                              jcr:primaryType="nt:unstructured"
                              text="Textarea"
                              value="textarea"/>
                      <hiddenText
                              jcr:primaryType="nt:unstructured"
                              text="Hidden"
                              value="hidden"/>
                    </items>
                  </type>
                  <id
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the id."
                          fieldLabel="Id"
                          name="./id"/>
                  <name
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the name."
                          fieldLabel="Name"
                          required="{Boolean}true"
                          name="./name"/>
                  <label
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the label."
                          fieldLabel="Label"
                          required="{Boolean}true"
                          name="./label"/>
                  <title-in-english
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter a title in English for Analytics."
                          fieldLabel="Field title in English"
                          name="./titleInEnglish"
                          required="{Boolean}true"/>
                  <placeholder
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the placeholder."
                          fieldLabel="Placeholder"
                          name="./placeholder"/>
                  <value
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the value."
                          fieldLabel="Value"
                          name="./value"/>
                  <readonly
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check to have readonly field."
                          name="./readonly"
                          text="Readonly"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false"/>
                  <disabled
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check to have disabled field."
                          name="./disabled"
                          text="Disabled"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false"/>
                  <characters-label
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter a label for field characters"
                          fieldLabel="Please enter a label for field characters"
                          name="./charactersLabel"/>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </general>
      <validation
              jcr:primaryType="nt:unstructured"
              jcr:title="Validation"
              sling:resourceType="granite/ui/components/coral/foundation/container"
              margin="{Boolean}true">
        <items jcr:primaryType="nt:unstructured">
          <columns
                  jcr:primaryType="nt:unstructured"
                  sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                  margin="{Boolean}true">
            <items jcr:primaryType="nt:unstructured">
              <column
                      jcr:primaryType="nt:unstructured"
                      sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                  <maxlength
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                          fieldDescription="Select the maxlength of the text field"
                          fieldLabel="Max length"
                          max="2000"
                          min="0"
                          name="./maxlength"/>
                  <required
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check to have required field."
                          name="./required"
                          text="Required"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false"/>
                  <presence-message
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the presence validation message."
                          fieldLabel="Presence validation message"
                          name="./validate/presence/message"/>
                  <email-message
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the email format validation message."
                          fieldLabel="Email format validation message"
                          name="./validate/email/message"/>
                  <length-tooLong
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the length validation message."
                          fieldLabel="Length validation message"
                          name="./validate/length/tooLong"/>
                  <format-pattern
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the format pattern for first name and last name fields."
                          fieldLabel="Format regex pattern"
                          name="./validate/format/pattern"/>
                  <format-message
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                          fieldDescription="Please enter the format error message."
                          fieldLabel="Format error message"
                          name="./validate/format/message"/>
                  <need-flag
                          jcr:primaryType="nt:unstructured"
                          granite:class="js-dialog-showhide"
                          sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                          fieldDescription="Check to have configure flag."
                          name="./validate/format/flagCheck"
                          text="Flag Check"
                          value="{Boolean}true"
                          uncheckedValue="{Boolean}false">
                    <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhide-target=".js-enable-flags"/>
                  </need-flag>
                  <flags-container
                          granite:class="js-enable-flags"
                          jcr:primaryType="nt:unstructured"
                          sling:resourceType="granite/ui/components/coral/foundation/container">
                    <granite:data
                            jcr:primaryType="nt:unstructured"
                            showhide-target-value="true"/>
                    <items jcr:primaryType="nt:unstructured">
                      <flags
                              jcr:primaryType="nt:unstructured"
                              fieldLabel="Flags"
                              fieldDescription="Click 'Add' to add a new RegEX Flag"
                              sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                              class="multifield-full-width"
                              validation="multifield-max-5"
                              composite="{Boolean}true">
                        <field
                                jcr:primaryType="nt:unstructured"
                                jcr:title="RegEx Flag"
                                name="./validate/format/flags"
                                granite:class="accordion-multifield-item"
                                sling:resourceType="granite/ui/components/coral/foundation/accordion">
                          <items
                                  jcr:primaryType="nt:unstructured">
                            <tab
                                    jcr:title="flag"
                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                    jcr:primaryType="nt:unstructured">
                              <items jcr:primaryType="nt:unstructured">
                                <flag
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                        emptyOption="{Boolean}true"
                                        fieldDescription="Please select RegEx Flag."
                                        fieldLabel="RegEx Flag"
                                        name="./regExFlags">
                                  <items jcr:primaryType="nt:unstructured">
                                    <global
                                            jcr:primaryType="nt:unstructured"
                                            text="Global"
                                            value="g"/>
                                    <multi-line
                                            jcr:primaryType="nt:unstructured"
                                            text="Multi line"
                                            value="m"/>
                                    <insensitive
                                            jcr:primaryType="nt:unstructured"
                                            text="Insensitive"
                                            value="i"/>
                                    <extended
                                            jcr:primaryType="nt:unstructured"
                                            text="Extended"
                                            value="x"/>
                                    <single-line
                                            jcr:primaryType="nt:unstructured"
                                            text="Single line"
                                            value="s"/>
                                    <unicode
                                            jcr:primaryType="nt:unstructured"
                                            text="Unicode"
                                            value="u"/>
                                    <ungreedy
                                            jcr:primaryType="nt:unstructured"
                                            text="Ungreedy"
                                            value="U"/>
                                    <anchored
                                            jcr:primaryType="nt:unstructured"
                                            text="Anchored"
                                            value="A"/>
                                    <jchanged
                                            jcr:primaryType="nt:unstructured"
                                            text="Jchanged"
                                            value="J"/>
                                    <doller-end-only
                                            jcr:primaryType="nt:unstructured"
                                            text="Dollar End Only"
                                            value="D"/>
                                  </items>
                                </flag>
                              </items>
                            </tab>
                          </items>
                        </field>
                      </flags>
                    </items>
                  </flags-container>
                </items>
              </column>
            </items>
          </columns>
        </items>
      </validation>
    </items>
  </content>
</jcr:root>
